WITH filtered_categories AS (
    SELECT category_code, category_desc
    FROM {{ ref('category') }}
    WHERE category_desc LIKE '%COLOR'
      AND category_desc NOT IN (
        'DIAL COLOR',
        'DIAMOND COLOR',
        'ENAMEL COLOR',
        'GIFTWARE COLOR',
        'GOLD COLOR',
        'LEATHER COLOR',
        'NYLON COLOR'
      )
),

category_positions AS (
    SELECT 
        master_cat,
        slave_cat,
        column_no
    FROM {{ ref('temp_assembly_cats') }}
    WHERE column_no BETWEEN 1 AND 150
),

watch_attributes AS (
    SELECT 
        a.assembly,
        a.category_code,
        a.attr_code,
        COALESCE(a.end_of_range_attr, 0) AS end_attr
    FROM {{ ref('sku_attr_assembly') }} a
),

joined_data AS (
    SELECT
        wa.assembly,
        cp.master_cat,
        wa.category_code,
        wa.attr_code,
        wa.end_attr,
        cp.column_no
    FROM watch_attributes wa
    LEFT JOIN category_positions cp
        ON wa.category_code = cp.slave_cat
    INNER JOIN filtered_categories fc
        ON wa.category_code = fc.category_code
    WHERE cp.column_no BETWEEN 1 AND 150
),

pivoted_data AS (
    SELECT
        assembly,
        master_cat
        {% for i in range(1, 151) %}
            , MAX(CASE WHEN column_no = {{ i }} THEN attr_code END) AS atr_cat_{{ '%03d' % i }}
            , MAX(CASE WHEN column_no = {{ i }} THEN end_attr END) AS end_atr_cat_{{ '%03d' % i }}
        {% endfor %}
    FROM joined_data
    GROUP BY assembly, master_cat
)

SELECT *
FROM pivoted_data
