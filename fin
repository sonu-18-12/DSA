WITH category_positions AS (
    SELECT 
        master_cat,
        slave_cat,
        column_no
    FROM {{ ref('temp_assembly_cats') }}
    WHERE column_no BETWEEN 1 AND 150
),

-- STEP 1: Get product_category_code
product_category AS (
    SELECT category_code
    FROM {{ ref('category') }}
    WHERE category_desc = 'product'
    LIMIT 1
),

-- STEP 2: Get attributes only related to product category
watch_attributes AS (
    SELECT 
        a.assembly,
        a.category_code,
        a.attr_code,
        COALESCE(a.end_of_range_attr, 0) AS end_attr
    FROM {{ ref('sku_attr_assembly') }} a
    WHERE a.category_code = (SELECT category_code FROM product_category)
),

-- STEP 3: Join with master/slave category
joined_data AS (
    SELECT
        wa.assembly,
        cp.master_cat,
        wa.category_code,
        wa.attr_code,
        wa.end_attr,
        cp.column_no
    FROM watch_attributes wa
    LEFT JOIN category_positions cp
        ON wa.category_code = cp.slave_cat
    WHERE cp.column_no BETWEEN 1 AND 150
),

-- STEP 4: Pivot attributes per assembly and master_cat
pivoted_data AS (
    SELECT
        assembly,
        MAX(master_cat) AS master_cat  -- Only one due to filter
        {% for i in range(1, 151) %}
            , MAX(CASE WHEN column_no = {{ i }} THEN attr_code END) AS atr_cat_{{ '%03d' % i }}
            , MAX(CASE WHEN column_no = {{ i }} THEN end_attr END) AS end_atr_cat_{{ '%03d' % i }}
        {% endfor %}
    FROM joined_data
    GROUP BY assembly
)

SELECT *
FROM pivoted_data
